// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================= USER & AUTH =================

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  // Phone is now REQUIRED for logistics
  phone       String       
  address     String?      // User's default address
  role        Role         @default(CUSTOMER)
  
  // Relations
  restaurant  Restaurant?  @relation("RestaurantOwner") 
  orders      Order[]      @relation("CustomerOrders")
  otp         Otp[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isVerified  Boolean      @default(false)
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)
}

// ================= RESTAURANT MANAGEMENT =================

model Restaurant {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique 
  address      String
  phone        String
  imageUrl     String?       // Cover image
  
  owner        User          @relation("RestaurantOwner", fields: [ownerId], references: [id])
  ownerId      String        @unique // One-to-One: One User = One Restaurant

  categories   MenuCategory[]
  menuItems    MenuItem[]
  orders       Order[]
  
  // --- SETTINGS ---
  isOpen       Boolean       @default(false)
  
  // Replaced 'deliveryTime' (String) with 'prepTime' (Int - minutes)
  // This is the time the Vendor needs to COOK.
  prepTime     Int           @default(20) 
  
  // Platform settings for this specific restaurant (Managed by Admin)
  deliveryFee  Float         @default(500.0) // Base delivery fee for this location
  minimumOrder Float         @default(0.0)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model MenuCategory {
  id           String      @id @default(uuid())
  name         String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId String
  menuItems    MenuItem[]
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model MenuItem {
  id           String       @id @default(uuid())
  name         String
  description  String?
  price        Float
  imageUrl     String?
  available    Boolean      @default(true)
  
  restaurant   Restaurant   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId String
  
  category     MenuCategory @relation(fields: [categoryId], references: [id])
  categoryId   String

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  // Soft Delete: If this has a date, the item is "deleted" but stays in DB for history
  deletedAt    DateTime?    
}

// ================= ORDERING & LOGISTICS =================

model Order {
  id              String        @id @default(uuid())
  
  customer        User          @relation("CustomerOrders", fields: [customerId], references: [id])
  customerId      String
  
  restaurant      Restaurant    @relation(fields: [restaurantId], references: [id])
  restaurantId    String

  items           OrderItem[]

  // --- Financial Snapshot ---
  // We store these SEPARATELY so we know exactly what was charged at that moment
  totalAmount     Float         
  deliveryFee     Float         
  
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  
  deliveryAddress String
  deliveryNotes   String?       

  reference       String        @unique 
  token           String?       @unique 

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String

  // --- Item Snapshot ---
  // We copy the name here. If the restaurant renames "Jollof" to "Rice", 
  // this old order will still say "Jollof".
  menuItemName String  
  menuItemId   String? // Optional: because the original item might be deleted later
  
  quantity  Int
  price     Float    // Price per unit AT THE TIME of order
}

// ================= ENUMS =================

enum OrderStatus {
  PENDING          // Created, awaiting payment
  PREPARING
  OUT_FOR_DELIVERY // Rider has picked up
  DELIVERED        // Complete
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum Role {
  CUSTOMER
  VENDOR
  ADMIN
  RIDER 
}