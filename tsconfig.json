{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node", "jest"],

    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    // "ignoreDeprecations": "6.0",

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
