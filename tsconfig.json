{
  "compilerOptions": {
    /* File structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "module": "commonjs",           // ✅ standard for Node backends
    "target": "es2020",             // ✅ modern JS
    "lib": ["es2020"],
    "types": ["node"],

    /* Build options */
    "sourceMap": true,
    "esModuleInterop": true,        // ✅ allows import express from "express"
    "moduleResolution": "node10",   // ✅ correct pairing for commonjs

     "ignoreDeprecations": "6.0",

    /* Type safety */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
